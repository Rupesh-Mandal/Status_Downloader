<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg"
    android:background="@android:color/white"
    tools:context="com.whatsapp.status.downloader.video.story.saver.MainActivity">


    <LinearLayout
        android:weightSum="5"
        android:id="@+id/c3"

        android:background="@drawable/curvx"
        android:rotation="-180"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"  >

        <View
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>
        <com.airbnb.lottie.LottieAnimationView
            android:clickable="true"
            android:onClick="onClick"
            app:lottie_colorFilter="@color/black"
            android:visibility="visible"
            android:rotation="-180"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:id="@+id/menue"
            app:lottie_rawRes="@raw/menue"
            android:focusable="true" />
        <View
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>
        <com.airbnb.lottie.LottieAnimationView
            android:rotation="-180"

            android:visibility="visible"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"

android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:id="@+id/gotohome"
            app:lottie_rawRes="@raw/stts"
            android:focusable="true" />
        <View
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>
        <com.airbnb.lottie.LottieAnimationView
            android:rotation="-180"

            android:visibility="visible"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
android:clickable="true"
            android:onClick="onClick"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_colorFilter="@color/black"
            android:id="@+id/downloa"
            app:lottie_rawRes="@raw/dwn"
            android:focusable="true" />


        <View
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:id="@+id/containerx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include layout="@layout/bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>