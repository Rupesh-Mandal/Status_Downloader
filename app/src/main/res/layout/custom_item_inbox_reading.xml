<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="55dp"
android:layout_marginTop="5dp"

    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:background="@android:color/transparent"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_gravity="center"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:background="@android:color/transparent"

            android:id="@+id/voic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_baseline_volume_up_24"
            app:tint="@color/black"
            android:focusable="true"
            android:contentDescription="@string/_21_08_2020_12_07_am" />
        <ImageView android:background="@android:color/transparent"

            android:contentDescription="@string/_21_08_2020_12_07_am"
            android:clickable="true"
            android:id="@+id/cop"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/voic"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_content_copy_24"
            app:tint="@android:color/black"
            android:focusable="true" />
        <TextView
            android:fontFamily="@font/bitter_bold"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/_21_08_2020_12_07_am"
            android:id="@+id/date"
            android:gravity="center|top" />

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
       android:layout_alignParentStart="true"
            android:layout_marginBottom="1dp"
            android:layout_below="@+id/date"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:fontFamily="@font/bitter_bold"
            android:textSize="12sp"
            android:paddingHorizontal="7dp"
            android:paddingVertical="3dp"


            android:text="@string/message"
            android:id="@+id/message"

            android:gravity="left|center_vertical"
            tools:ignore="UnknownIdInLayout" />


</RelativeLayout>





</androidx.cardview.widget.CardView>